cin>>m2;
cout<<"\nEnter the studenttestmarks3:";
cin>>m3;
}


voidstudent::average()
{
if(m1<m2 && m1<m3)
avg=(m2+m3)/2;
else if(m2<m3)
avg =(m1+m3)/2;
else
avg=(m1+m2)/2;
}


void student::display()
{
cout<<"\n==============Detailsofthestudent"<<name<<"============="<<endl;
cout<<"USN:"<<usn<<endl;
cout<<"NAME:"<<name<<endl;
cout<<"MARKS1:"<<m1<<endl;
cout<<"MARKS2:"<<m2<<endl;
cout<<"MARKS3:"<<m3<<endl;
cout<<"========================================================"<<endl;
cout<<"AVERAGEOFBESTOFTWOMARKS:"<<avg<<endl;
}


